<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhuhai.mapper.ResourceMapper">

    <cache/>

    <sql id="resourceColumns">name,type,url,parent_id,parent_ids,permission,avaliable,update_time,create_time</sql>

    <insert id="createResource" parameterType="Resource" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_resource(<include refid="resourceColumns"/>) VALUES (#{name},#{type},#{url},#{parentId},#{parentIds},#{permission},#{avaliable},#{updateTime},#{createTime})
    </insert>

    <update id="updateResource" parameterType="Resource">
        UPDATE sys_resource SET name = #{name},type = #{type},url = #{url},parent_id = #{parentId},parent_ids = #{parentIds},permission = #{permission},avaliable = #{avaliable} WHERE id = #{id}
    </update>

    <delete id="deleteResource" parameterType="long">
        DELETE FROM sys_resource WHERE id = #{id}
    </delete>

    <select id="findById" parameterType="long" resultType="Resource">
        SELECT id,<include refid="resourceColumns"/> FROM sys_resource WHERE id = #{id}
    </select>

    <select id="findAll" resultType="Resource">
        SELECT id,<include refid="resourceColumns"/> FROM sys_resource WHERE avaliable = TRUE
    </select>

    <select id="findPermissionsByIds" resultType="string">
        SELECT permission FROM sys_resource WHERE avaliable = TRUE AND id IN
          <foreach collection="array" index="index" item="ids" open="(" separator="," close=")">
              #{ids}
          </foreach>
    </select>
</mapper>